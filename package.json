{
  "name": "ascmanagement",
  "version": "1.0.0",
  "description": "The Management App of Mission College ASC",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "web": "npm run build && node ./dist/web/app.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tricaodo/Mission-College-Tutoring-Management.git"
  },
  "author": "Anh Nguyen & Tri Do",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tintheanh/ascManagement/issues"
  },
  "homepage": "https://github.com/tintheanh/ascManagement#readme",
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/mysql": "^2.15.6",
    "body-parser": "^1.19.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "firebase": "^6.3.0",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/firebase": "^3.2.1",
    "@types/node": "^12.0.8",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "exec": "npm run web",
    "ext": "ts"
  }
}
