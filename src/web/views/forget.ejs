<% include top/header %>
<h2 class="title-box-form">Forget Your Password ?</h2>
<div class="container">
    <div class="box-form">
        <form action="/login" method="POST">
            <label>Sign-in ID*</label>
            <div class="form-group">
                <input class="form-control" type="text" name="signinID" placeholder="Enter your ID">
            </div>
            <label>Email Address*</label>
            <div class="form-group">
                <input class="form-control" type="password" name="email" placeholder="Enter your email">
            </div>
            <div class="form-group">
                <button class="form-control btn btn-primary">Submit</button>
            </div>
            <div class="form-group">
                <a href="/login" class="form-control btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>
<% include bottom/footer %>
