            <% for(let i = 0; i < times.length; i++) {%>
            <% if(times[i] !== null){ %>
            <% let fromObj = times[i]['0']['from']['time'] %>
            <% console.log(fromObj) %>
            <a href="#myModal" 
                class="btn btn-xs btn-primary" 
                data-toggle="modal" 
                data-target="#myModal"
                data-subject="<%= selectedSubject %>"
                data-tutor="<%= data.firstName %> <%= data.lastName %>" 
                data-date="" 
                data-start="" 
                data-end="" 
                ><%= fromObj %></a>
            <a href="#myModal" class="btn btn-info btn-lg" data-toggle="modal" data-code="code" data-company="company name">
                    <img src="../images/edit.png" style="width:20px;">
            </a>
            <% } %>
            <% } %>

        </div>
    </div>
    <% }); %>
</div>
